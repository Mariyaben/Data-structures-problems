#include<iostream>
using namespace std;
int main()
{
    int i, arr[10], num, beg, end, mid;
    cout<<"Enter 10 Elements ";
    for(i=0; i<10; i++)
        cin>>arr[i];
    cout<<"\nEnter Element to be Search: ";
    cin>>num;
    beg = 0;
    end = 9;
    mid = (beg+end)/2;
    while(beg <= end)
    {
        if(arr[mid]<num)
            beg = mid+1;
        else if(arr[mid]==num)
        {
            cout<<"\nThe number, "<<num<<" found at Position "<<mid+1;
            break;
        }
        else
            end = mid-1;
        mid = (beg+end)/2;
    }
    if(beg>end)
        cout<<"\nThe number, "<<num<<" is not found in given Array";
    cout<<endl;
    return 0;
}
